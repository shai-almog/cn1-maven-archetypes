<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd" name="filechooser-demo"
    xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>
    <requiredProperty key="cn1-version">
      <defaultValue>7.0-SNAPSHOT</defaultValue>
    </requiredProperty>
    <requiredProperty key="kotlin">
      <defaultValue>false</defaultValue>
    </requiredProperty>
    <requiredProperty key="kotlin-version">
      <defaultValue>1.3.72</defaultValue>
    </requiredProperty>

    <requiredProperty key="mainName">
      <validationRegex>^[A-Z][a-zA-Z0-9]+$</validationRegex>
    </requiredProperty>

  </requiredProperties>
  <fileSets>

    <fileSet encoding="UTF-8">
      <directory>.mvn</directory>
      <includes>
        <include>**/*.config</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>nbactions.xml</include>
        <include>*.sh</include>
        <include>*.bat</include>
        <include>*.adoc</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="${rootArtifactId}-common" dir="common" name="${rootArtifactId}-common">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/guibuilder</directory>
          <includes>
            <include>**/*.gui</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/css</directory>
          <includes>
            <include>**/*.css</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>



        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>codenameone_settings.properties</include>
            <include>nbactions.xml</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>icon.png</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-javase" dir="javase" name="${rootArtifactId}-javase">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>

          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/desktop/java</directory>

          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/desktop/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-javascript" dir="javascript" name="${rootArtifactId}-javascript">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/javascript</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-ios" dir="ios" name="${rootArtifactId}-ios">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/objectivec</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>

    <module id="${rootArtifactId}-android" dir="android" name="${rootArtifactId}-android">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-win" dir="win" name="${rootArtifactId}-win">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/csharp</directory>
          <includes>
            <include>**/*.cs</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>
